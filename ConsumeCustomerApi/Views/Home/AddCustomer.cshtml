@model ConsumeCustomerApi.Models.Customer
@{
    ViewBag.Title = "AddCustomer";
}

<h2>AddCustomer</h2>

<form asp-action="AddCustomer" method="post">
    <div class="form-group">
        <label for="Name">FirstName: </label>
        <input class="form-control " name="FirstName" />
    </div>

    <div class="form-group">
        <label for="Name">LastName:</label>
        <input class="form-control" name="LastName" />
    </div>

    <div class="form-group">
        <label for="Name">PhoneNumber:</label>
        <input class="form-control" name="PhoneNumber" />
    </div>

    <div class="form-group">
        <label for="Name">EmailAdress:</label>
        <input class="form-control" name="EmailAdress" />
    </div>

</form>


@if (Model != null)
{
    <h2>Customer</h2>

 <table class="table table-sm table-striped table-bordered m-2">
<thead>
    <tr>
        <th>ID</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>PhoneNumber</th>
        <th>EmailAdress</th>
    </tr>
</thead>
<tbody>
    <tr>
        <td>@Model.Id</td>
        <td>@Model.Firstname</td>
        <td>@Model.LastName</td>
        <td>@Model.PhoneNumber</td>
        <td>@Model.EmailAddress</td>
    </tr>
</tbody>

</table>
 }