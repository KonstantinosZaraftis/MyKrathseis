@model ConsumeCustomerApi.Models.Customer
@{
    ViewBag.Title = "GetCustomer";
}
<h2>Get Customer by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<br />

<h2>GetCustomer</h2>


<form method="post">

    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Reservation</button>
    </div>
</form>
@if (Model != null)
{
    <h2>Customer</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>PhoneNumber</th>
                <th>EmailAdrress</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Firstname</td>
                <td>@Model.LastName</td>
                <td>@Model.PhoneNumber</td>
                <td>@Model.EmailAddress</td>
            </tr>
        </tbody>
    </table>




}
