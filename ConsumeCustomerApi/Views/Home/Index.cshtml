@model IEnumerable<ConsumeCustomerApi.Models.Customer>

@{
    ViewBag.Title = "Index";
}


<h2>All Customers</h2>

<table class="table table-sm table-striped table-bordered m-2" >
    <thead>
        <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>PhoneNumber</th>
            <th>EmailAdress</th>

        </tr>

    </thead>
    <tbody>
        @foreach(var customer in Model)
         {
            <tr>
                <td>@customer.Firstname</td>
                <td>@customer.LastName</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.EmailAddress</td>

            </tr>

         }


    </tbody>
</table>










