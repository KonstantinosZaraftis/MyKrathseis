@model Krathseis2.Models.Customer
@{
    ViewBag.Title = "Create";
}

<h2>Fill in the form to Create new Customer</h2>

@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.ValidationSummary(true, "", new {@class="text-danger"})

        @Html.LabelFor(x=>x.Firstname, new { @class="control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(x =>x.Firstname, "", new { @class="text-danger"})
        </div>

        @Html.LabelFor(x=>x.LastName,new {@class="control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(x=>x.LastName,new {@class="text-danger" })
        </div>

        @Html.LabelFor(x=>x.PhoneNumber,new  {@class="control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.PhoneNumber, new {@class="text-danger"})
        </div>

        @Html.LabelFor(x=>x.EmailAddress, new {@class="control-label col-md-2" })
       <div class="col-md-10">
           @Html.TextBoxFor(x=>x.EmailAddress,new  {@class="text-danger" })
       </div>

    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit"  value="Save"  class="btn btn-default"/>

        </div>
    </div>
 }
 
<div>
    @Html.ActionLink("Back to Index","Index")
</div>
